<div class="container">
  <div class="row mt-3">
    <div class="col-9 d-flex flex-column align-items-center">
      <h1><%= @restaurant.name %></h1>
      <div class="restaurant-details">
        <p><span class="font-italic mr-2">Address: </span><%= @restaurant.address %></p>
        <p><span class="font-italic mr-2">Phone: </span><%= @restaurant.phone_number %></p>
        <p><span class="font-italic mr-2">Category: </span><%= @restaurant.category %></p>
        <ul class="reviews">
          <% @restaurant.reviews.each do |review| %>
            <li><%= review.rating %> - <%= review.content %> </li>
          <% end %>
        </ul>
      </div>
      <%= link_to "Back", root_path %>
    </div>

    <div class="col-3">
      <h6 class="my-3">Create a review for <%= @restaurant.name %> </h6>
      <%= simple_form_for [@restaurant, @review] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating, collection: 0..5 %>
          <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
