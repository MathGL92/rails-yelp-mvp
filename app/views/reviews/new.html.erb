<div class="row mt-3">
  <div class="col-6 mx-auto">
    <h1 class="my-3">Create a review for <%= @restaurant.name %> </h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit %>
    <% end %>
  </div>
</div>
